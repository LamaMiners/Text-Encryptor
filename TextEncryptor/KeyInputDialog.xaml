<Window x:Class="TextEncryptor.KeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Shift Value" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <!-- Label to prompt the user -->
        <Label Content="Enter Key:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <!-- TextBox to enter the shift value -->
        <TextBox x:Name="ShiftValueBox" HorizontalAlignment="Left" Height="25" Margin="10,40,0,0" VerticalAlignment="Top" Width="260"/>

        <!-- OK Button -->
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>

        <!-- Cancel Button -->
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
